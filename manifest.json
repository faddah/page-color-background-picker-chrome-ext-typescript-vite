{
	"name": "Page Background Color Picker Chrome Extension",
    "version": "0.0.1",
    "description": "A Digital Clock Drop-down Chrome Extension that displays the current time on your computer.",
		"manifest_version": 3, 
    "action": {
        "default_popup": "index.html?width=150&height=100",
				"default_title": "Page Background Color Picker Extension"
		},
		"permissions": [
			"scripting"
		],
		"host_permissions": [
			"http://*/*",
			"https://*/*"
		],
		"icons": {
			"32": "images/icon32.png"
		},
		"background": {
			"service_worker": "service-worker.js",
			"type": "module"
		}
}